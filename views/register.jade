extends layout

block content
	article#register(v-cloak)
		h5 举报来电
		.form
			p
				label 手机号码
				input.xxxl-txt(type='text',placeholder='请填写要您的手机号码',v-model='tel')
			p
				label 短信验证码
				input.xxxl-txt(type='text',placeholder='请填写验证码')
				input.btn(@click='post_code',type='button',value="发送验证码",v-if='post_time==0')
				input.btn(type='button',v-bind:value='"重新发送("+post_time+")"',v-if='post_time')
			div
				button(@click='register') 绑定手机
			input#backurl(type="hidden",value='#{url}')
	script(src='/js/register.js?v=#{_v}')

				